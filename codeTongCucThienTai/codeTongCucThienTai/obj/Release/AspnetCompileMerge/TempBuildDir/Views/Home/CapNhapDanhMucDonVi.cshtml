@model codeTongCucThienTai.Models.DanhMucDonVi
<div class="modal-dialog" role="document">
    <div class="modal-content">

        <div class="modal-header bg-info white">
            <h2 class="modal-title white">Cập nhật đơn vị</h2>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true"><i class="la la-close"></i></span>
            </button>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.isTrash)
                @Html.HiddenFor(x => x.danhMucDonViId)
                <div class="form tat-toan form-horizontal form-edit">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group row">
                                    <label class="col-md-3 label-control">Tên đơn vị</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(x => x.danhMucDonViName, new { @class = "form-control input-sm", @placeholder = "Nhập tên.." })
                                        @Html.ValidationMessageFor(x => x.danhMucDonViName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-12 text-right">
                                        <button type="submit" class="btn btn-info">Lưu dữ liệu</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
