
@{
    int count = (int)ViewBag.Count;
    int Level = (int)ViewBag.Level;
    int _item = 0;
    string STT = ViewBag.STT;
}
@model IEnumerable<codeTongCucThienTai.Models.DanhMucNhiemVu>
@foreach (var item in Model)
{
    _item++;
    <tr class="">
        <td class="text-left">@STT.@_item</td>
        @if (Level == 1)
        {
            <td class="text-left text-bold">@item.danhMucNhiemVuName</td>
        }
        @if (Level == 2)
        {
            <td class="text-left">@item.danhMucNhiemVuName</td>
        }
        @if (Level == 3)
        {
            <td class="text-left" style="font-style:italic;">@item.danhMucNhiemVuName</td>
        }
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td class="red text-right text-bold"></td>
        <td class="red text-right text-bold"></td>
        <td class="text-left"></td>
    </tr>
    @Html.Action("NhiemVuThuocChuyenMuc2", "Home", new { Id = item.danhMucNhiemVuId, Count = count, STT = STT + "." + _item })
    @Html.Action("DanhMucCon2", "Home", new { Id = item.danhMucNhiemVuId, Count = count, Level = Level + 1, STT = STT + "." + _item })
}
