@section scripts {
    <script>
        //$(document).ready(function () {
        //    $('#KehoachNhiemVu').DataTable();
        //});
        function ShowAddData() {
            $("#modalAddData").modal("show");
        }
        function SuccessMessage() {
            var _erro = $('#success').val();
            if (_erro.length > 0)
                displayMessage($('#success').val(), 'success');
            else
                displayMessage($('#error').val(), 'error');
            $("#modalAddData").modal("hide");
        }
        function SearchNC() {
            $("#SearchKey").val($("#SearchKeyNC").val());
            $("#DonViDeXuat").val($("#DonViDeXuatNC").val());
            $("#ke-hoach-nhiem-vu-list").submit();
        }
        function Search() {
            $("#SearchKeyNC").val($("#SearchKey").val());
            $("#DonViDeXuatNC").val($("#DonViDeXuat").val());
            $("#ke-hoach-nhiem-vu-list").submit();
        }
        function AddNhiemVu() {
            $("#modalBodyNhiemVu").load("@Url.Action("ThemMoiNhiemVu", "Home")");
            setTimeout(function () {
                $("#modalNhiemVu").modal("show");
            }, 500)
        }
        function suaNhiemVu(x) {
            $("#modalBodyUpdateNhiemVu").load("/Home/CapNhapNhiemVu/" + x);
            setTimeout(function () {
                $("#modalUpdateNhiemVu").modal("show");
            }, 500)
        }
        function xemNhiemVu(x) {
            $("#modalBodyXem").load("/Home/ChiTietNhiemVu/" + x);
            setTimeout(function () {
                $("#modalXemNhiemVu").modal("show");
            }, 500)
        }
        function duyetNhiemVu(x) {
            $("#modalBodyDuyet").load("/Home/DuyetNhiemVu/" + x);
            setTimeout(function () {
                $("#modalDuyetNhiemVu").modal("show");
            }, 500)
        }

        function xoaNhiemVu(x) {
            var result = confirm("Bạn có chắc chắn muốn xóa không?");
            if (result) {
                $.ajax({
                    type: "GET",
                    url: "/Home/XoaNhiemVu",
                    data: { Id: x },
                    datatype: "json",
                    success: function (data) {
                        if (data)
                            displayMessage($('#success').val(), 'success');
                        else
                            displayMessage($('#error').val(), 'error');
                        document.location.reload(true);
                    }
                });
            }
        }
        function Print() {
            var No = $('input[name="cbSTT"]:checked').length > 0;
            var Name = $('input[name="cbName"]:checked').length > 0;
            var NguonVon = $('input[name="cbNguonVon"]:checked').length > 0;
            var DVDeXuat = $('input[name="cbDVDeXuat"]:checked').length > 0;
            var DVDuToan = $('input[name="cbDVDeDuToan"]:checked').length > 0;
            var NamKeHoach = $('input[name="cbNamKeHoach"]:checked').length > 0;
            var GiaTriDeXuat = $('input[name="cbGiaTriDeXuat"]:checked').length > 0;
            var GiaTriDeXuat2 = $('input[name="cbGiaTriDeXuat2"]:checked').length > 0;
            var GhiChu = $('input[name="cbGhiChu"]:checked').length > 0;
            var frame1 = $('<iframe />');
            frame1[0].name = "frame1";
            frame1.css({ "position": "absolute", "top": "-1000000px" });
            $("body").append(frame1);
            var frameDoc = frame1[0].contentWindow ? frame1[0].contentWindow : frame1[0].contentDocument.document ? frame1[0].contentDocument.document : frame1[0].contentDocument;
            frameDoc.document.open();
            frameDoc.document.write('<html><head><title>Tổng cục thiên tai</title>');
            frameDoc.document.write('</head><body>');
            $.ajax({
                type: "GET",
                url: "/Print/PrintKeHoach",
                data: { _No: No, _Name: Name, _NguonVon: NguonVon, _DonViDeXuat: DVDeXuat, _DonViDuToan: DVDuToan, _NamKeHoach: NamKeHoach, _GiaTriDeXuat: GiaTriDeXuat, _GiaTriDeXuat2: GiaTriDeXuat2, _GhiChu: GhiChu, TenNhiemVu: $("#SearchKey").val(), DonViDeXuat: $("#DonViDeXuat").val(), DonViDuToan: $("#DonViDuToan").val(), NguonVon: $("#NguonVon").val(), NamKeHoach: $("#NamKeHoach").val() },
                datatype: "json",
                success: function (data) {
                    frameDoc.document.write(data);
                }
            });
            frameDoc.document.write('</body></html>');
            frameDoc.document.close();
            setTimeout(function () {
                window.frames["frame1"].focus();
                window.frames["frame1"].print();
                frame1.remove();
            }, 500);
        }

        function ExportExcel() {
            var No = $('input[name="cbSTT"]:checked').length > 0;
            var Name = $('input[name="cbName"]:checked').length > 0;
            var NguonVon = $('input[name="cbNguonVon"]:checked').length > 0;
            var DVDeXuat = $('input[name="cbDVDeXuat"]:checked').length > 0;
            var DVDuToan = $('input[name="cbDVDeDuToan"]:checked').length > 0;
            var NamKeHoach = $('input[name="cbNamKeHoach"]:checked').length > 0;
            var GiaTriDeXuat = $('input[name="cbGiaTriDeXuat"]:checked').length > 0;
            var GiaTriDeXuat2 = $('input[name="cbGiaTriDeXuat2"]:checked').length > 0;
            var GhiChu = $('input[name="cbGhiChu"]:checked').length > 0;

            var ua = window.navigator.userAgent;
            var msie = ua.indexOf("MSIE ");
            if (msie > 0 || !!navigator.userAgent.match(/Trident.*rv\:11\./)) {
                txtArea1.document.open("txt/html", "replace");
                $.ajax({
                    type: "GET",
                    url: "/Print/PrintKeHoach",
                    data: { _No: No, _Name: Name, _NguonVon: NguonVon, _DonViDeXuat: DVDeXuat, _DonViDuToan: DVDuToan, _NamKeHoach: NamKeHoach, _GiaTriDeXuat: GiaTriDeXuat, _GiaTriDeXuat2: GiaTriDeXuat2, _GhiChu: GhiChu, TenNhiemVu: $("#SearchKey").val(), DonViDeXuat: $("#DonViDeXuat").val(), DonViDuToan: $("#DonViDuToan").val(), NguonVon: $("#NguonVon").val(), NamKeHoach: $("#NamKeHoach").val() },
                    datatype: "json",
                    success: function (data) {
                        txtArea1.document.write(data);
                    }
                });
                txtArea1.document.close();
                txtArea1.focus();
                sa = txtArea1.document.execCommand("SaveAs", true, "DanhSachKeHoach.xls");
                return (sa);
            }
            else {

                $.ajax({
                    type: "GET",
                    url: "/Print/PrintKeHoach",
                    data: { _No: No, _Name: Name, _NguonVon: NguonVon, _DonViDeXuat: DVDeXuat, _DonViDuToan: DVDuToan, _NamKeHoach: NamKeHoach, _GiaTriDeXuat: GiaTriDeXuat, _GiaTriDeXuat2: GiaTriDeXuat2, _GhiChu: GhiChu, TenNhiemVu: $("#SearchKey").val(), DonViDeXuat: $("#DonViDeXuat").val(), DonViDuToan: $("#DonViDuToan").val(), NguonVon: $("#NguonVon").val(), NamKeHoach: $("#NamKeHoach").val() },
                    datatype: "json",
                    success: function (data) {
                        var downloadLink;
                        var dataType = 'application/vnd.ms-excel';
                        var filename = "DanhSachKeHoach.xls";
                        downloadLink = document.createElement("a");
                        document.body.appendChild(downloadLink);
                        downloadLink.href = 'data:' + dataType + ', ' + encodeURIComponent(data);
                        downloadLink.download = filename;
                        downloadLink.click();
                    }
                });
            }
        }
    </script>
}
